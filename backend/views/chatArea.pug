if (inbox)
    div(class="col-md-6 col-lg-7 col-xl-8 mt-3")
        div(class="mt-2 mb-4 d-flex justify-content-center align-items-center")
            img(src=`/img/user/${toUser.avatar}`
                alt="avatar"
                class="rounded-circle d-flex align-self-start me-3 shadow-1-strong"
                style="object-fit: cover;"
                height="60"
                width="60")
            div(class="d-flex flex-column")
                p(class="fw-bold mb-0 h4")=toUser.name
                p(class="text-muted mb-0") Active now
                            
        ul(id="messageContainer" class="list-unstyled" style="max-height: 400px; min-height: 400px; overflow-x: hidden; overflow-y: scroll;") 
            each box in inbox
                if (box.from.id === toUser.id)
                    li(class="d-flex mb-4")
                        img(src=`/img/user/${box.from.avatar}`
                            alt="avatar"
                            class="rounded-circle d-flex align-self-start me-3 shadow-1-strong"
                            style="object-fit: cover;"
                            height=40
                            width="40")
                        
                        div(class="card ")
                            div(class="card-header d-flex justify-content-between p-1")
                                p(class="text-muted small mb-0")=box.sentAt.toLocaleTimeString('en-US', { hour12: false }).split(':').slice(0, -1).join(':')
                            div(class="card-body p-2")
                                p(class="mb-0")=box.content
                else
                    li(class="d-flex justify-content-end mb-4 me-2")
                        div(class="card")
                            div(class="card-header d-flex justify-content-end p-1")
                                p(class="text-muted small mb-0 p-1")=box.sentAt.toLocaleTimeString('en-US', { hour12: false }).split(':').slice(0, -1).join(':')
                            div(class="card-body p-2 d-flex justify-content-end" style="background-color: #6e08ef; color: #FFFFFF")
                                p(class="mb-0")=box.content
                        img(src=`/img/user/${currUser.avatar}`
                            alt="avatar"
                            class="rounded-circle d-flex align-self-start ms-3 shadow-1-strong"
                            style="object-fit: cover;"
                            height="40"
                            width="40")
                
            
        form(action="") 
            div(class="bg-white mb-3")
                div(class="form-outline")
                    input(type="text" id="txtContent" class="form-control" placeholder="Enter message..." autocomplete="off")

            button(type="button" id="btnSend" class="btn btn-info btn-rounded float-end") Send